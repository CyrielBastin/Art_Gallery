{% extends 'base.html.twig' %}

{% block title %} Sign-up {% endblock %}

{% block body %}
    <section class="container" style="margin-top: 50px;">
        <h1 class="text-center title-form-custom">Sign Up here</h1>

        {{ form_start(form) }}
        <div class="d-flex justify-content-center">
            <div class="container-form-custom">
                <div class="form-group">
                    {{ form_row(form.email, { 'attr': { 'autofocus': 'autofocus' }, 'label': 'Email' }) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.password, { 'label': 'Password' }) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.confirmPassword, { 'label': 'Confirm Password' }) }}
                </div>
                <div class="d-flex justify-content-center">
                    {{ form_row(form.submit, { 'label':'Sign-up', 'attr': { 'class': 'btn btn-info btn-lg', 'style': 'margin-top: 20px;' } }) }}
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </section>
{% endblock %}

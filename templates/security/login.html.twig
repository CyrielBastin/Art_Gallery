{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="container" style="margin-top: 50px;">
        <h1 id="loginform" class="text-center title-form-custom">Please Log in</h1>

        <div class="d-flex justify-content-center">
            <div class="container-form-custom">
                <div class="d-flex justify-content-center">
                    <img class="rounded-circle" src="{{ asset('assets/images/avatar_default.png') }}" alt="avatar_default.png" style="max-width: 100px; max-height: 100px;margin-bottom: 20px;"/>
                </div>
                <div class="form-group">
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" style="width: 350px;" required autofocus>
                </div>
                <div class="form-group">
                    <label for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" style="width: 350px;" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}

                <div class="d-flex justify-content-center">
                    <button class="btn btn-info btn-lg" type="submit" style="margin: 15px 0px">
                        Log in
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>
{% endblock %}

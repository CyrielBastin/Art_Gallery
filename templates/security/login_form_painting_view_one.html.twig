    <form method="post" action="{{ path('app_login') }}">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="container" style="margin-top: 50px;">
            <h1 id="loginform" class="text-center title-form-custom">Log-in to post a comment</h1>

            <div class="d-flex justify-content-center">
                <div class="container-form-custom">
                    <div class="form-group">
                        <label for="inputEmail">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" style="width: 350px;" required>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword">Password</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" style="width: 350px;" required>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="d-flex justify-content-center">
                        <button class="btn btn-info btn-lg" type="submit" style="margin: 15px 0px">
                            Log in
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>

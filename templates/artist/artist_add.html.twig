{% extends 'base.html.twig' %}

{% trans_default_domain 'artist' %}

{% block title %}{% trans %}Add an artist{% endtrans %}{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center title-form-custom">{% trans %}Add an artist{% endtrans %}</h1>
        {{ form_start(form) }}
        <div class="d-flex justify-content-center align-items-end">
            <div class="col-md-3">
                {{ form_row(form.lastname) }}
            </div>
            <div class="col-md-3">
                {{ form_row(form.firstname) }}
            </div>
            <div class="col-md-3">
                {{ form_row(form.imageFile) }}
            </div>
        </div>
        <div class="d-flex justify-content-center align-items-end">
            <div class="col-md-3">
                {{ form_row(form.country) }}
            </div>
            <div class="col-md-3">
                {{ form_label(form.date_of_birth) }}
                {{ form_widget(form.date_of_birth, { 'attr': { 'class': 'date-custom', 'style': 'width: 113%' } } ) }}
                {{ form_help(form.date_of_birth) }}
            </div>
            <div class="col-md-3">
                {{ form_label(form.date_of_death) }}
                {{ form_widget(form.date_of_death, { 'attr': { 'class': 'date-custom', 'style': 'width: 113%' } } ) }}
                {{ form_help(form.date_of_death) }}
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <div class="col-md-9">
                {{ form_row(form.commentary) }}
            </div>
        </div>
        <div class="d-flex justify-content-center">
            {{ form_row(form.submit) }}
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

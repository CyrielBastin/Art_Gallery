{% trans_default_domain 'header' %}

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3" style="margin-top: 50px; margin-bottom: 53px;">
            <img id="logo_site" src="{{ asset('assets/images/base_images/logo_site.png') }}" alt="site logo"/>
        </div>
        <div class="col-md-3">
            {% if not app.user %}
                <div class="login-zone">
                    <a href="{{ path('app_login') }}#loginform">{% trans %}Login{% endtrans %}</a>
                </div>
            {% else %}
                <div class="profil-zone">
                    <div class="card text-white bg-dark mb-3" style="width: 150px;">
                        <div class="d-flex justify-content-center">
                            <a href="{{ path('user_profile_view_one', {'pseudo': app.user.userprofile.pseudo}) }}">
                                <img class="rounded-circle" src="{% if app.user.userprofile.avatar == 'avatar_default.png' %}
                                                                    {{ asset('assets/images/avatar_default.png') }}
                                                                 {% else %}
                                                                    {{ vich_uploader_asset(app.user.userprofile, 'imageFile')|imagine_filter('avatar_comment') }}
                                                                 {% endif %}
                                                            " alt="{{ app.user.userprofile.avatar }}" style="width: 60px; height: 60px;"/>
                            </a>
                        </div>
                        <div class="user-menu-content">
                            <div class="card-body">
                                <div class="d-flex justify-content-center">
                                    <p class="card-text" style="margin-top: -10px; margin-bottom: 20px; font-size: 1.2em;">{{ app.user.userprofile.pseudo }}</p>
                                </div>
                                <div class="d-flex justify-content-center">
                                    <p style="font-size: 1.2em;"><a href="{{ path('user_profile_view_one', {'pseudo': app.user.userprofile.pseudo}) }}">{% trans %}Profile{% endtrans %}</a></p>
                                </div>
                                <div class="d-flex justify-content-center">
                                    <p style="font-size: 1.2em;"><a href="#">{% trans %}Messages{% endtrans %}</a></p>
                                </div>
                                <div class="d-flex justify-content-center" style="background-color: white;">
                                    <p style="margin-bottom: 0px; font-size: 1.4em;"><a href="{{ path('app_logout') }}"><span style="color: #343a40;">{% trans %}Log out{% endtrans %}</span></a></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

    {# Navbar #}
    <div class="menu-custom">
        <div class="menu-custom-border-grey">
            <div class="navbar-custom">
                {# Element Home #}
                <a href="{{ path('homepage') }}">{% trans %}Home{% endtrans %}</a>
                {# Element Painting#}
                <div class="dropdown-custom">
                    <button class="dropbtn-custom"><a href="{{ path('painting_all') }}">{% trans %}Paintings{% endtrans %}</a></button>
                    <div class="dropdown-content-custom">
                        <a href="{{ path('painting_all') }}">{% trans %}All{% endtrans %}</a>
                        <a href="{{ path('painting_latest_added') }}">{% trans %}Latest added{% endtrans %}</a>
                        <a href="{{ path('painting_discount') }}">{% trans %}Discount{% endtrans %}</a>
                        <span>===========</span>
                        <a href="{{ path('painting_media_all') }}">{% trans %}Medias{% endtrans %}</a>
                        <span>===========</span>
                        <a href="{{ path('painting_style_all') }}">{% trans %}Styles{% endtrans %}</a>
                    </div>
                </div>
                {# Element Artists #}
                <div class="dropdown-custom">
                    <button class="dropbtn-custom"><a href="{{ path('artist_all') }}">{% trans %}Artists{% endtrans %}</a></button>
                    <div class="dropdown-content-custom">
                        <a href="{{ path('artist_all') }}">{% trans %}All{% endtrans %}</a>
                    </div>
                </div>
                {# Element Subscribe #}
                <a href="{{ path('signup') }}">{% trans %}Sign-Up{% endtrans %}</a>
                {# Element Contact #}
                <a href="{{ path('contact_us') }}#form-contact">{% trans %}Contact{% endtrans %}</a>
                {# Element Forum #}
                <a href="#">{% trans %}Forum{% endtrans %}</a>
                {# Elemnt Admin #}
                <div class="dropdown-custom">
                    <button class="dropbtn-custom"><a href="#">{% trans %}Admin{% endtrans %}</a></button>
                    <div class="dropdown-content-custom">
                        <a href="{{ path('sonata_admin_dashboard') }}">{% trans %}Dashboard{% endtrans %}</a>
                        <a href="{{ path('painting_add') }}">{% trans %}Add painting{% endtrans %}</a>
                        <a href="{{ path('painting_media_add') }}">{% trans %}Add media{% endtrans %}</a>
                        <a href="{{ path('painting_style_add') }}">{% trans %}Add style{% endtrans %}</a>
                        <a href="{{ path('artist_add') }}">{% trans %}Add artist{% endtrans %}</a>
                        <a href="{{ path('newsletter_view_all') }}">{% trans %}Newsletter{% endtrans %}</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {# END Navbar #}
</div>

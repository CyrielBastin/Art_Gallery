{% extends 'base_social.html.twig' %}

{% trans_default_domain 'social' %}

{% block title %}{% trans %}Edit your message{% endtrans %}{% endblock %}

{% block body %}
    <div class="container">
        <a href="{{ path('user_profile_all', { '_locale': app.request.locale }) }}" class="btn btn-dark btn-lg" role="button" style="margin-top: -200px;">{% trans %}Back{% endtrans %}</a>
    </div>
    <div class="container">
        <h1 class="text-center title-form-custom">{% trans %}Edit your message{% endtrans %} {{ receiver }}</h1>
        {{ form_start(form) }}
        <div class="d-flex justify-content-center align-items-end">
            <div class="col-md-7">
                {{ form_row(form.message, { 'attr': { 'style': 'height: 200px;' } }) }}
            </div>
        </div>
        <div class="d-flex justify-content-center">
            {{ form_row(form.submit, { 'attr': { 'class': 'btn btn-info btn-submit-custom', 'style': 'font-size: 1.7em;' } }) }}
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

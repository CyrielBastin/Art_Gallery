{% extends 'base.html.twig' %}

{% block title %}{{ style[0]['name'] }} : Description{% endblock %}

{% block body %}
    <div class="big-screen-adjustment-painting" style="margin-top: 100px; margin-bottom: 100px">
        <div class="card mb-3" style="margin-left: 15px; margin-right: 15px; max-width: 1100px">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="{{ asset('assets/images/styles/' ~ style[0]['image']) }}" class="card-img" alt="{{ style[0]['image'] }}" style="max-width: 300px; max-height: 300px">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">{{ style[0]['name'] }} : </h5>
                        <p class="card-text">{{ style[0]['description'] }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}{{ style['name'] }} : Description{% endblock %}

{% block body %}
    <div class="big-screen-adjustment-painting" style="margin-top: 100px; margin-bottom: 100px">
        <div class="card mb-3" style="margin-left: 15px; margin-right: 15px; max-width: 1100px">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="{{ asset('assets/images/styles/' ~ style['image']) }}" class="card-img" alt="{{ style['image'] }}" style="width: 300px; height: 300px">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">{{ style['name'] }} : </h5>
                        <p class="card-text">{{ style['description'] }}</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-around">
            <a href="{{ path('painting_style_edit_one', {id:style['id']}) }}" class="btn btn-info btn-lg btn-submit-custom" role="button"><span style="font-size: 1.5em;">Edit</span></a>
            <a href="{{ path('painting_style_delete_one', {id:style['id']}) }}" class="btn btn-danger btn-lg btn-submit-custom" role="button"><span style="font-size: 1.5em;">Delete</span></a>
        </div>
    </div>
{% endblock %}

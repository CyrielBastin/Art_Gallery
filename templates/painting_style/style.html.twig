{% extends 'base.html.twig' %}

{% block title %}Styles{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            {% for style in styles %}
                    <div class="col-md-3 margin-top-bottom">
                        <a href="{{ path('painting_style_view_one', {id:style['id']}) }}">
                            <div class="card bg-dark text-white max-image-size">
                                <img src="{{ asset('assets/images/styles/' ~ style['image']) }}" class="card-img" alt="{{ style['image'] }}">
                                <div class="card-img-overlay">
                                    <p class="card-text align-text-middle">{{ style['name'] }}</p>
                                </div>
                            </div>
                        </a>
                    </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

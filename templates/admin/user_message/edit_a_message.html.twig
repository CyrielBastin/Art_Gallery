{% extends 'base_admin.html.twig' %}

{% trans_default_domain 'admin' %}

{% block title %}{% trans %}Edit a message{% endtrans %}{% endblock %}

{% block body %}
    <div class="container">
        <a href="{{ path('admin_user_message_see_conversation_between_users', { '_locale': app.request.locale, 'user_pseudo': user, 'receiver_pseudo': receiver }) }}" class="btn btn-dark btn-lg" role="button" style="margin-top: -200px;">{% trans %}Back{% endtrans %}</a>
    </div>
    <div class="container">
        <h1 class="text-center title-form-custom">{% trans %}Edit a message{% endtrans %}</h1>
        {{ form_start(form) }}
        <div class="d-flex justify-content-center align-items-end">
            <div class="col-md-7">
                {{ form_row(form.message, { 'attr': { 'style': 'height: 200px;' } }) }}
            </div>
        </div>
        <div class="d-flex justify-content-center">
            {{ form_row(form.submit, { 'attr': { 'class': 'btn btn-info btn-submit-custom', 'style': 'font-size: 1.7em;' } }) }}
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

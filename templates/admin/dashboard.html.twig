{% extends 'base_admin.html.twig' %}

{% trans_default_domain 'admin' %}

{% block title %}{% trans %}Dashboard{% endtrans %}{% endblock %}

{% block body %}
    <div class="container">
        {# Painting row #}
        <div class="row">
            <div class="col">
                <div class="card border-secondary mb-3" style="height: 100px;">
                    <div class="card-body text-secondary">
                        <a class="dashboard-link" href="{{ path('admin_paintings_list', { '_locale': app.request.locale }) }}"><h5 class="card-title"><i class="fa fa-picture-o fa-3x" aria-hidden="true"></i><span class="admin-painting">{% trans %}PAINTINGS{% endtrans %}</span></h5></a>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card border-secondary mb-3" style="height: 100px;">
                    <div class="card-body text-secondary d-flex">
                        <a class="dashboard-link" href="{{ path('admin_medias_list', { '_locale': app.request.locale }) }}">
                            <img src="{{ asset('assets/images/base_images/media_icon.png') }}" alt="media_icon.png">
                        </a>
                        <a class="dashboard-link" href="{{ path('admin_medias_list', { '_locale': app.request.locale }) }}">
                            <h5 class="card-title" style="margin-top: 25px;"><span class="admin-media">{% trans %}MEDIAS{% endtrans %}</span></h5>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card border-secondary mb-3" style="height: 100px;">
                    <div class="card-body text-secondary">
                        <a class="dashboard-link" href="{{ path('admin_styles_list', { '_locale': app.request.locale }) }}"><h5 class="card-title"><i class="fa fa-paint-brush fa-3x" aria-hidden="true"></i><span class="admin-style">{% trans %}STYLES{% endtrans %}</span></h5></a>
                    </div>
                </div>
            </div>
        </div>
        {# END row #}

        {# Artist row #}
        <div class="row">
            <div class="col-md-4">
                <div class="card border-secondary mb-3" style="height: 100px;">
                    <div class="card-body text-secondary d-flex">
                        <a class="dashboard-link" href="{{ path('admin_artists_list', { '_locale': app.request.locale }) }}"><img src="{{ asset('assets/images/base_images/artist_icon.png') }}" alt="media_icon.png"></a>
                        <a class="dashboard-link" href="{{ path('admin_artists_list', { '_locale': app.request.locale }) }}"><h5 class="card-title" style="margin-top: 25px;"><span class="admin-media">{% trans %}ARTISTS{% endtrans %}</span></h5></a>
                    </div>
                </div>
            </div>
        </div>
        {# END row #}

        {# Newsletter row #}
        <div class="row">
            <div class="col-md-4">
                <div class="card border-secondary mb-3" style="height: 100px;">
                    <div class="card-body text-secondary">
                        <a class="dashboard-link" href="{{ path('admin_newsletter_view_all', { '_locale': app.request.locale }) }}"><h5 class="card-title"><i class="fa fa-envelope-open fa-3x" aria-hidden="true"></i><span class="admin-painting">{% trans %}NEWSLETTER{% endtrans %}</span></h5></a>
                    </div>
                </div>
                </div>
        </div>
        {# END row #}

        {# User rown #}
        <div class="row">
            <div class="col-md-4">
                <div class="card border-secondary mb-3" style="height: 100px;">
                    <div class="card-body text-secondary">
                        <a class="dashboard-link" href="{{ path('admin_users_list', { '_locale': app.request.locale }) }}"><h5 class="card-title"><i class="fa fa-users fa-3x" aria-hidden="true"></i><span class="admin-style">{% trans %}USERS{% endtrans %}</span></h5></a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-secondary mb-3" style="height: 100px;">
                    <div class="card-body text-secondary">
                        <a class="dashboard-link" href="{{ path('admin_comments_overview', { '_locale': app.request.locale }) }}"><h5 class="card-title"><i class="fa fa-comment-o fa-3x" aria-hidden="true"></i><span class="admin-style">{% trans %}COMMENTS{% endtrans %}</span></h5></a>
                    </div>
                </div>
            </div>
        </div>
        {# END row #}
    </div>
{% endblock %}

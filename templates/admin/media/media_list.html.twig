{% extends 'base_admin.html.twig' %}

{% trans_default_domain 'admin' %}

{% block title %}{% trans %}Medias{% endtrans %}{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center" style="margin-bottom: 20px;">
        <a href="{{ path('admin_media_add', { '_locale': app.request.locale }) }}" class="btn btn-outline-info btn-lg" role="button">{% trans %}Add one.m{% endtrans %}</a>
    </div>

    <div class="container">
        <table class="table table-hover table-dark">
            <thead>
            <tr class="text-center">
                <th scope="col">{% trans %}Image{% endtrans %}</th>
                <th scope="col">{% trans %}Name{% endtrans %}</th>
                <th scope="col">{% trans %}Edit{% endtrans %}</th>
                <th scope="col">{% trans %}Delete{% endtrans %}</th>
            </tr>
            </thead>
            <tbody class="painting-list-cell">
            {% for media in medias %}
                <tr class="text-center">
                    <th scope="row"><a href="{{ path('painting_media_view_one', { '_locale': app.request.locale, 'id': media['id'] }) }}"><img src="{{ vich_uploader_asset(media, 'imageFile', 'App\\Entity\\PaintingMedia')|imagine_filter('listing_element_admin') }}" alt="{{ media['image'] }}"/></a></th>
                    <td class="align-middle">{{ media['name'] }}</td>
                    <td class="align-middle"><a href="{{ path('admin_media_edit', { '_locale': app.request.locale, 'id': media['id'] }) }}"><i class="fa fa-magic fa-2x" aria-hidden="true" style="color: white;"></i></a></td>
                    <td class="align-middle"><a href="{{ path('admin_media_delete', { '_locale': app.request.locale, 'id': media['id'] }) }}"><i class="fa fa-ban fa-2x" aria-hidden="true" style="color: white;"></i></a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}{{ painting['title'] }}{% endblock %}

{% block body %}
    <div class="big-screen-adjustment-painting" style="margin-top: 100px; margin-bottom: 100px">
        <div class="card mb-3" style="margin-left: 15px; margin-right: 15px; max-width: 1100px">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="{{ asset('assets/images/paintings/' ~ painting['image']) }}" class="card-img" alt="{{ painting['image'] }}" style="width: 300px; height: 300px">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">{{ painting['title'] ~ ' by ' }} <a class="painting-link" href="{{ path('artist_view_one', {id:painting['artist_id'] }) }}">{{ painting['artist'] }}</a></h5>
                        <p class="card-text">{{ painting['description'] }} <br/><br/>
                        {{ painting['style'] }}
                            <small class="text-muted" style="margin-left: 30px">{{ painting['media'] ~ ' ( ' ~ painting['dimensions'] ~ ' cm )' }}</small>
                        </p>
                        <p class="card-text" style="margin-top: 20px; color: green">{{ painting['price'] ~ ' â‚¬'}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}{{ painting['title'] }}{% endblock %}

{% block body %}
    <div class="big-screen-adjustment-painting" style="margin-top: 100px; margin-bottom: 100px">
        <div class="card mb-3" style="margin-left: 15px; margin-right: 15px; max-width: 1100px">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="{{ asset('assets/images/paintings/' ~ painting['image']) }}" class="card-img" alt="{{ painting['image'] }}" style="width: 300px; height: 300px">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">{{ painting['title'] ~ ' by ' }} <a class="painting-link" href="{{ path('artist_view_one', {id:painting['artist_id'] }) }}">{{ painting['artist'] }}</a></h5>
                        <p class="card-text">{{ painting['description'] }} <br/><br/>
                        {{ painting['style'] }}
                            <small class="text-muted" style="margin-left: 30px">{{ painting['media'] ~ ' ( ' ~ painting['dimensions'] ~ ' cm )' }}</small>
                        </p>
                        {% if painting['discount']==0 %}
                            <p class="card-text" style="margin-top: 20px; color: green">{{ painting['price'] ~ ' €'}}</p>
                        {% else %}
                            <div class="d-flex justify-content-start">
                                <p class="card-text" style="margin-top: 20px; color: green; text-decoration: line-through;">{{ painting['price'] ~ ' €'}}</p>
                                <p class="card-text" style="margin: 20px 15px;"> --> </p>
                                <p class="card-text" style="margin-top: 20px; color: red;">{{ painting['price_reduced']|number_format(1, ',', ' ') ~ ' €'}}</p>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-around">
            <a href="{{ path('painting_edit_one', {id:painting['id']}) }}" class="btn btn-info btn-lg btn-submit-custom" role="button"><span style="font-size: 1.5em;">Edit</span></a>
            <a href="{{ path('painting_delete_one', {id:painting['id']}) }}" class="btn btn-danger btn-lg btn-submit-custom" role="button"><span style="font-size: 1.5em;">Delete</span></a>
        </div>
    </div>
{% endblock %}

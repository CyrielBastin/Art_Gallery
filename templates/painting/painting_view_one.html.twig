{% extends 'base.html.twig' %}

{% trans_default_domain 'painting' %}

{% block title %}{{ painting['title'] }}{% endblock %}

{% block body %}
    {# Section Painting #}
    <div class="big-screen-adjustment-painting" style="margin-top: 100px; margin-bottom: 100px">
        <div class="card mb-3" style="margin-left: 15px; margin-right: 15px; max-width: 1100px">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="{{ asset('assets/images/paintings/' ~ painting['image']) }}" class="card-img" alt="{{ painting['image'] }}" style="width: 300px; height: 300px">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">{{ painting['title'] }} {% trans %}by{% endtrans %} <a class="painting-link" href="{{ path('artist_view_one', {'id': painting['artist_id'], '_locale': app.request.locale}) }}">{{ painting['artist'] }}</a></h5>
                        <p class="card-text">{{ painting['description'] }} <br/><br/>
                            {{ painting['style'] }}
                            <small class="text-muted" style="margin-left: 30px">{{ painting['media'] ~ ' ( ' ~ painting['dimensions'] ~ ' cm )' }}</small>
                        </p>
                        {% if painting['discount'] == 0 %}
                            <p class="card-text" style="margin-top: 20px; color: green">{{ painting['price'] ~ ' €'}}</p>
                        {% else %}
                            <div class="d-flex justify-content-start">
                                <p class="card-text" style="margin-top: 20px; color: green; text-decoration: line-through;">{{ painting['price'] ~ ' €'}}</p>
                                <p class="card-text" style="margin: 20px 15px;"> --> </p>
                                <p class="card-text" style="margin-top: 20px; color: red;">{{ painting['price_reduced']|number_format(1, ',', ' ') ~ ' €'}}</p>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-around">
        <a href="{{ path('painting_edit_one', {'id': painting['id'], '_locale': app.request.locale}) }}" class="btn btn-info btn-lg btn-submit-custom" role="button"><span style="font-size: 1.5em;">{% trans %}Edit{% endtrans %}</span></a>
        <a href="{{ path('painting_delete_one', {'id': painting['id'], '_locale': app.request.locale}) }}" class="btn btn-danger btn-lg btn-submit-custom" role="button"><span style="font-size: 1.5em;">{% trans %}Delete{% endtrans %}</span></a>
    </div>
    {# END Section #}

    {# Section FORM Comment #}
    {% if app.user %}
        <div class="container" style="margin-top: 20px; margin-bottom: 30px;">
            <h1 id="post-a-commentary" class="text-center title-form-custom" style="margin-bottom: 30px;">{% trans %}Post a commentary :{% endtrans %}</h1>
            <div class="d-flex justify-content-center">
                {{ form_start(form) }}
                <div class="form-row">
                    {{ form_row(form.commentary, { 'label': app.user.userprofile.pseudo ~ ' :', 'label_attr': { 'style': 'font-size: 2em;' }, 'attr': { 'style': 'width: 500px; height: 180px;' } }) }}
                </div>
                <div class="d-flex justify-content-center">
                    {{ form_row(form.submit, { 'label': 'Send', 'attr': { 'class': 'btn btn-info btn-lg', 'style': 'width: 200px; height: 50px; font-size: 1.8em; padding-bottom: 50px;' } }) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    {% else %}
        {#
         # If we don't embed form with embedded action controller

        <div class="container">
            <div class="d-flex justify-content-center">
                <div class="box-login-to-comment">
                    <p><a href="{{ path('app_login') }}">Log-in</a> to write a commentary</p>
                </div>
            </div>
        </div>
        #}
        {{ render(controller('App\\Controller\\SecurityController::loginFormPaintingViewOne')) }}
    {% endif %}
    {# END Section #}

    {# Section comment #}
    <div class="container">
        {% for commentary in commentaries %}
            <div class="row" style="margin-bottom: 30px;">
                <div class="col-md-10 offset-md-1">
                    <div class="media" style="border: solid white 2px; border-radius: 15px;">
                        <a href="{{ path('user_profile_view_one', { 'pseudo': commentary['pseudo'], '_locale': app.request.locale }) }}">
                            <img src="
                    {% if commentary['avatar'] == 'avatar_default.png' %}
                        {{ asset('assets/images/avatar_default.png') }}
                    {% else %}
                        {{ vich_uploader_asset(commentary, 'imageFile', 'App\\Entity\\UserProfile') | imagine_filter('avatar_comment') }}
                    {% endif %}" class="mr-3" alt="{{ commentary['avatar'] }}" style="width: 64px; height: 64px; border-radius: 15px;">
                        </a>
                            <div class="media-body" style="padding-top: 5px;">

                            <div class="d-flex">
                                <div class="col-md-8">
                                    <h5 class="mt-0"><a href="{{ path('user_profile_view_one', { 'pseudo': commentary['pseudo'], '_locale': app.request.locale }) }}" style="color: black;">{{ commentary['pseudo'] }}</a> {% trans %}wrote :{% endtrans %}</h5>
                                </div>
                                <div class="text-muted">
                                    {% trans %}posted :{% endtrans %} {{ commentary['posted_at']|date('d/m/Y, H:i:s') }}
                                </div>
                            </div>
                            {{ commentary['commentary'] }}
                            <hr class="my-4">
                            <div class="d-flex">
                                <div class="col-md-8">
                                    <div class="text-muted" style="margin-top: -20px; margin-bottom: 10px;">
                                        {{ commentary['signature'] }}
                                    </div>
                                </div>
                                {% if app.user %}
                                    {% if app.user.userprofile.pseudo == commentary['pseudo'] %}
                                        <div class="d-flex" style="margin-top: -17px;">
                                            <a href="{{ path('painting_comment_edit_user_comment', { 'id': commentary['id'], 'painting_id': painting['id'], '_locale': app.request.locale }) }}" style="margin-right: 40px;"><i class="fa fa-pencil-square-o" aria-hidden="true" style="color: green; font-size: 1.5em;"><span style="font-size: 0.7em; color: black; margin-left: 5px;">{% trans %}Edit{% endtrans %}</span></i></a>
                                            <a href="{{ path('painting_comment_delete_user_comment', { 'commentary_id': commentary['id'], 'painting_id': painting['id'], '_locale': app.request.locale }) }}"><i class="fa fa-trash" aria-hidden="true" style="color: red; font-size: 1.5em;"><span style="font-size: 0.7em; color: black; margin-left: 5px;">{% trans %}Delete{% endtrans %}</span></i></a>
                                        </div>
                                    {% endif %}
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
        <div class="d-flex justify-content-center">
            {{ knp_pagination_render(commentaries) }}
        </div>
    </div>
    {# END Section #}
{% endblock %}

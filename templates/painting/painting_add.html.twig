{% extends 'base.html.twig' %}

{% block title %}Add a painting{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center title-form-custom">Add a painting</h1>
        {{ form_start(form) }}
        <div class="row align-items-end">
            <div class="col-md-4 offset-md-1">
                {{ form_row(form.title) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.artist) }}
            </div>
            <div class="col-md-2">
                {{ form_row(form.imageFile) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-5 offset-md-1">
                <div class="row align-items-baseline">
                    <div class="col-md-6">
                        {{ form_row(form.year) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.dimensions) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8 offset-md-2">
                        {{ form_row(form.media) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8 offset-md-2">
                        {{ form_row(form.style) }}
                    </div>
                </div>
            </div>
            <div class="col-md-5">
                {{ form_row(form.description) }}
            </div>
        </div>
        <div class="row align-items-baseline">
            <div class="col-md-2 offset-md-6" style="margin-top: -30px;">
                {{ form_row(form.price) }}
            </div>
            <div class="col-md-2 offset-md-1" style="margin-top: -30px; margin-left: 50px;">
                {{ form_row(form.discount) }}
            </div>
        </div>
        <div class="d-flex justify-content-center">
            {{ form_rest(form) }}
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

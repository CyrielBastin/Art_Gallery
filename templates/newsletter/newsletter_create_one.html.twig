{% extends 'base.html.twig' %}

{% block title %}Create a newsletter{% endblock %}


{% block body %}
    <div class="container">
        <h1 class="text-center title-form-custom">Send a Newsletter</h1>
        {{ form_start(form) }}
        <div class="form-group">
            <div class="col-md-5 offset-md-1">
                {{ form_row(form.subject) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-8 offset-md-1">
                {{ form_row(form.message, { 'attr': { 'style': 'height: 200px;' } }) }}
            </div>
        </div>
            <div class="form-row">
                <div class="offset-md-4">
                    {{ form_row(form.submit, { 'attr': { 'class': 'btn btn-info btn-lg btn-submit-custom', 'style': 'font-size: 1.7em;' } }) }}
                </div>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
